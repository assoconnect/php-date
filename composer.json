{
    "name": "assoconnect/php-date",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/assoconnect/php-date/"
        }
    ],
    "type": "library",
    "description": "PHP object to handle dates without time",
    "keywords": ["php", "date"],
    "homepage": "https://github.com/assoconnect/php-date/",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "AssoConnect\\PHPDate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AssoConnect\\PHPDate\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "assoconnect/php-quality-config": "^1.16"
    },
    "require": {
        "php": "^8.3",
        "ext-intl": "*",
        "thecodingmachine/safe": "^3.0",
        "symfony/clock": "^6.4|^7.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
